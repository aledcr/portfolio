<style>
    section.hero {
        display: flex;
        align-items: center;
        justify-content: center;

        width: 100%;
        padding: 2rem;

        overflow: hidden;
    }

    .hero-text-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    h1 {
        width: fit-content;

        font-size: 4rem;
        font-weight: normal;
        text-align: center;
    }

    p {
        margin-block: 1rem;
        max-width: 40ch;
    }

    .hero-contacts-container {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .hero-contacts {
        display: flex;

        align-items: center;
    }

    .hero-contacts a {
        display: flex;
        align-items: center;
        justify-content: center;

        padding: 0.5rem;
        aspect-ratio: 1/1;

        opacity: 0.7;
        transition: all 0.5s;

        text-decoration: none;
        color: white;
    }

    .hero-contacts a:hover,
    .hero-contacts a:focus-visible {
        opacity: 1;
    }

    .hero-contacts a svg {
        position: relative;
        bottom: 0rem;

        width: 1.5rem;
        height: 1.5rem;

        transition: all 0.5s;
    }

    .hero-contacts a:hover > svg,
    .hero-contacts a:focus-visible > svg {
        bottom: 0.5rem;
    }

    img {
        display: none;

        width: 30rem;
        height: 30rem;
    }

    /* Large devices (desktops, 992px and up) */
    @media (min-width: 992px) {
        section.hero {
            flex-direction: row;
            justify-content: space-between;
        }
        .hero-text-container {
            display: block;
        }
        h1 {
            white-space: nowrap;
        }

        img {
            display: block;
        }
    }

    /*  X-Large devices (large desktops, 1200px and up) */
    @media (min-width: 1200px) {
        section.hero {
            flex-direction: row;
            justify-content: space-between;
        }
        .hero-text-container {
            display: block;
        }
        img {
            display: block;
        }
    }

    /* XX-Large devices (larger desktops, 1400px and up) */
    @media (min-width: 1400px) {
        section.hero {
            flex-direction: row;
            justify-content: space-between;
        }
        .hero-text-container {
            display: block;
        }
        img {
            display: block;
        }
    }
</style>
